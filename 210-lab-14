#include <iostream>
#include <iomanip>

using namespace std;

class Color
{
private:
    int red;
    int green;
    int blue;

public:
    // Constructor
    Color(int r = 0, int g = 0, int b = 0) : red(r), green(g), blue(b) {}
    // Setters
    void setRed(int r)
    {
        red = r;
    }
    void setGreen(int g)
    {
        green = g;
    }
    void setBlue(int b)
    {
        blue = b;
    }
    // Getters
    int getRed() const { return red; }
    int getGreen() const { return green; }
    int getBlue() const { return blue; }

    // Print method
    void print() const
    {
        cout << "Color(R:" << setw(3) << red << " G:" << setw(3) << green << " B:" << setw(3) << blue << ")" << endl;
    }
};

int main(){
    // Create several Color objects
    Color c1(255, 0, 0);     // Red
    Color c2(0, 255, 0);     // Green
    Color c3(0, 0, 255);     // Blue
    Color c4;                // Default Black
    Color c5(128, 128, 128); // Gray

    // Change one with setters
    c4.setRed(255);
    c4.setGreen(255);
    c4.setBlue(0); // Yellow

    // Print all colors
    cout << "Printing Color objects:" << endl;
    c1.print();
    c2.print();
    c3.print();
    c4.print();
    c5.print();

    return 0;
}
